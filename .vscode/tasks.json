{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/AksPodIdTests.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/ResourcesBackend/ResourcesBackend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/ResourcesBackend/ResourcesBackend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-repository",
            "command": "dotnet",
            "type": "process",
            "isBackground": true,
            "group": "test",
            "args": [
                "test",
                "/property:GenerateFullPaths=true"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/ResourcesRepository.Tests",
                "env": {
                    "LOCAL_DEV": "PATH_TO_YOUR_CREDENTIALS_FILE_GOES_HERE",
                    "TEST_SUBSCRIPTION_ID": "TARGET_SUBSCRIPTION_ID_TO_RUN_TEST_AGAINST",
                    "TEST_RESOURCE_GROUP": "TARGET_RESOURCE_GROUP_TO_RUN_TEST_AGAINST"
                }
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "test-repository-debug",
            "command": "dotnet",
            "type": "process",
            "isBackground": true,
            "group": "test",
            "args": [
                "test",
                "/property:GenerateFullPaths=true"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/ResourcesRepository.Tests",
                "env": {
                    "VSTEST_HOST_DEBUG": "1",
                    "LOCAL_DEV": "PATH_TO_YOUR_CREDENTIALS_FILE_GOES_HERE",
                    "TEST_SUBSCRIPTION_ID": "TARGET_SUBSCRIPTION_ID_TO_RUN_TEST_AGAINST",
                    "TEST_RESOURCE_GROUP": "TARGET_RESOURCE_GROUP_TO_RUN_TEST_AGAINST"
                }
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}